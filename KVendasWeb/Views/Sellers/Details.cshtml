@model KVendasWeb.Models.Seller
@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>
<hr />
<div>
    <h4>Vendedor</h4>
    <br />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            E-Mail
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt>
            Salario
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt>
            Departamento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Departament.Name)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Editar</a>
</div>